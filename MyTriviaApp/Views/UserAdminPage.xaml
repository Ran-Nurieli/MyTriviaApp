<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyTriviaApp.Views.UserAdminPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:MyTriviaApp.Models"
    xmlns:vm="clr-namespace:MyTriviaApp.ViewModels"
    Title="UserAdminPage">
    <VerticalStackLayout>

        <Label
            FontSize="Large"
            HorizontalOptions="Center"
            Text="User Management" />
        <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
            <CollectionView x:Name="colView" >

            </CollectionView>
        </RefreshView>

        <HorizontalStackLayout HorizontalOptions="Center">
            <Picker SelectedItem="{Binding SelectedIndex, Mode=TwoWay}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>
                            Rookie
                        </x:String>
                        <x:String>
                            Master
                        </x:String>
                        <x:String>
                            Admin
                        </x:String>
                        <x:String>
                            All
                        </x:String>
                    </x:Array>

                </Picker.ItemsSource>
            </Picker>
            <Button Command="{Binding FilterCommand}" Text="Filter" />
            <Button
                BackgroundColor="Red"
                Command="{Binding ClearPointsCommand}"
                Text="Reset" />
        </HorizontalStackLayout>
        <ScrollView MaximumHeightRequest="200">

            <StackLayout x:Name="UsersStackLayout">
                <CollectionView
                    x:Name="colview"
                    Grid.Row="2"
                    ItemsSource="{Binding Players}">
                    <!--  עיצוב הפריסה של הפריטים  -->
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="4" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <!--  תצוגה כשאין פריטים  -->
                    <CollectionView.EmptyView>
                        <VerticalStackLayout
                            Margin="10"
                            Padding="5"
                            BackgroundColor="LightBlue"
                            HeightRequest="200"
                            VerticalOptions="Start">
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                    <!--  עיצוב תצוגה של פריט בודד  -->
                    <CollectionView.ItemTemplate>
                        <!--  x:DataType מגדיר מאיפה להשלים את הנתונים  -->
                        <DataTemplate x:DataType="models:Player">
                            <SwipeView>
                                <SwipeView.LeftItems>
                                    <SwipeItem Text="Delete" BackgroundColor="Red"             
                                               Command="{Binding BindingContext.RemovePlayerCommand, Source={x:Reference colview}}"
                                               CommandParameter="{Binding .}"/>
                                    <SwipeItem Text="Reset Points" BackgroundColor="Green"        
                                               Command="{Binding BindingContext.ResetPointsCommand, Source={x:Reference colview}}"
                                               CommandParameter="{Binding .}"/>
                                </SwipeView.LeftItems>
                                <Grid Padding="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Text="{Binding Name}" 
                               Grid.Row="0" Grid.Column="0"
                               FontSize="18" FontAttributes="Bold" />
                                    <Label Text="{Binding Mail}" 
                               Grid.Row="0" Grid.Column="1"
                               FontSize="14" TextColor="Gray" />
                                    <Label Text="{Binding Rank.RankName}" 
                               Grid.Row="1" Grid.Column="0"
                               FontSize="16" FontAttributes="Bold" />
                                    <Label Text="{Binding Points}" 
                               Grid.Row="1" Grid.Column="1"
                               FontSize="16" FontAttributes="Bold" />
                                    
                                </Grid>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

        </ScrollView>
        <HorizontalStackLayout HorizontalOptions="Center">

            <Button
                BackgroundColor="Blue"
                Command="{Binding AddPlayerCommand}"
                Text="Add Player" />
            <Grid>
                <Entry
                    HorizontalTextAlignment="Center"
                    Text="Username"
                    WidthRequest="100" />
            </Grid>
            <Grid>
                <Entry
                    HorizontalTextAlignment="Center"
                    Text="Mail"
                    WidthRequest="100" />
            </Grid>
            <Grid>
                <Entry
                    HorizontalTextAlignment="Center"
                    Text="Password"
                    WidthRequest="100" />
            </Grid>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>